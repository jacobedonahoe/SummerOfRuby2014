<h1>Items</h1>
<fieldset>
  <legend>Add Link</legend>
  <form action="/links" method="POST">
    <label>Name: <input type="text" name="name"></label>
    <label>URL: <input  type="text" name="url"></label>
    <label>Description: <textarea name="description">Enter Description</textarea></label>
    <input type="submit" name="add link">
  </form>
</fieldset>
<% if @tablerows.length > 0 %>
  <table>
    <tr><th>Name</th><th>URL</th><th>Description</th></tr>
    <%= @tablerows.join %>
  </table>
<% else %>
  <p> There are no records in your database</p>
<% end %>
